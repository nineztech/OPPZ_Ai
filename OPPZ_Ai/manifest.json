{
  "manifest_version": 3,
  "name": "OPPZ Ai",
  "version": "1.1.5",
  "description": "Effortless Job Applications. Powered by AI.",
  "icons": {
    "16": "/assets/images/OPPZ_Ai_Logo.jpeg",
    "48": "/assets/images/OPPZ_Ai_Logo.jpeg",
    "128": "/assets/images/OPPZ_Ai_Logo.jpeg"
  },
  "action": {
    "default_icon": {
      "16": "/assets/images/OPPZ_Ai_Logo.jpeg",
      "48": "/assets/images/OPPZ_Ai_Logo.jpeg",
      "128": "/assets/images/OPPZ_Ai_Logo.jpeg"
    },
    "default_popup": "popup/auth/login.html",
    "default_title": "CONFIGURATION"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": [
        "content/utils.js",
        "content/createElements.js",
        "content/content.js",
        "content/xpaths.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "notifications"
  ],
 "host_permissions": [
  "http://localhost:3000/*",
  "http://localhost:5006/*",
  "https://www.linkedin.com/*",
  "https://oppzai.com/*",
  "https://www.oppzai.com/*",
  "https://oppzai-production-c5c3.up.railway.app/*"
],

  "web_accessible_resources": [
    {
      "resources": [
        "popup/**",
        "assets/images/*",
        "modals/*",
        "assets/images/OPPZ_Ai_Logo.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
 "externally_connectable": {
  "matches": [
    "http://localhost:3000/*",
    "https://oppzai.com/*",
    "https://www.oppzai.com/*"
  ]
}

}
